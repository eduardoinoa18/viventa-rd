##############################################
# VIVENTA RD - Example Environment Variables #
##############################################

# --- Firebase (Client) ---
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# --- Algolia (Search - client) ---
NEXT_PUBLIC_ALGOLIA_APP_ID=
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=
NEXT_PUBLIC_ALGOLIA_INDEX=viventa_listings

# --- Algolia (server/admin - DO NOT expose on client) ---
# These are examples for server-side environments or Cloud Functions
# ALGOLIA_APP_ID=
# ALGOLIA_ADMIN_KEY=
# ALGOLIA_INDEX=viventa_listings

# --- Mapbox ---
NEXT_PUBLIC_MAPBOX_TOKEN=

# --- Master Admin Auth ---
# Comma-separated list of allowed emails for production
MASTER_ADMIN_EMAILS=viventa.rd@gmail.com
# Optional single fallback variable
MASTER_ADMIN_EMAIL=viventa.rd@gmail.com
# Override allowlist in production for testing
ALLOW_ANY_MASTER_EMAIL=false
# Return the verification code in API response (for testing)
ALLOW_DEV_2FA_RESPONSE=false

# --- Email Provider (choose one) ---
# SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SMTP (e.g., Gmail with App Password)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# --- Stripe (Billing & Subscriptions) ---
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# Get this from Stripe Dashboard → Developers → Webhooks after creating endpoint
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# --- Site Configuration ---
# Used for payment redirects and email links
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# --- Social Network Waitlist ---
# WhatsApp group invite link for social network waitlist
NEXT_PUBLIC_SOCIAL_WHATSAPP_GROUP=https://chat.whatsapp.com/XXXXX
